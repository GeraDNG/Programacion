import java.lang.Math;
public class Terreno {
	//VARIABLES:
	private int verticeX[] = new int[6];
	private int verticeY[] = new int[6];
	//CONSTRUCTORES:
	public Terreno(){
		for (int i=0; i<6; i++){
			verticeX[i]=0;
			verticeY[i]=0;
		}
	}
	public Terreno(int[] X, int[] Y){
		verticeX = X;
		verticeY = Y;
	}
	//SETTERS:
	public void setX (int[] X){
		for (int i=0; i<6; i++){
			verticeX[i] = X[i];
		}
	}
	public void setY (int[] Y){
		for (int i=0; i<6; i++){
			verticeY[i]=Y[i];
		}
	}
	//GETTERS:
	public int[] getX (){
		return verticeX;
	}
	public int[] getY (){
		return verticeY;
	}
	//METODOS:
	public void mostrarVertices(){
		for (int i=0; i<6; i++){
			System.out.println("El vertice "+i+" es: "+verticeX[i]+", "+verticeY[i]);
		}
	}
	public void area(){
		int suma1=0, suma2=0;
		for(int i=0, j=1; i<6 && j<7; i++, j++){
			if(j==6){
				j=0;
			}
			suma1=suma1+();
		}
		Math.abs();
	}
}
